<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_button_layout"
    android:layout_width="72dp"
    android:layout_height="72dp"
    android:layout_gravity="bottom|end"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="72dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_custom_floating_button_container"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/floating_button_background"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageview_custom_floating_button_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/floating_button_background" />

            <ImageView
                android:id="@+id/imageview_custom_floating_button_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/sms_24px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textview_custom_floating_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:1 문의"
                android:textColor="@color/jagi_ivory"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageview_custom_floating_button_icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

