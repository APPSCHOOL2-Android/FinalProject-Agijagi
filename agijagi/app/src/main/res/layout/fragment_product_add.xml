<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sellermypage.ProductAddFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/Theme.AgijagiToolbar"
        app:navigationIcon="@drawable/arrow_back_24px"
        app:title="상품등록" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:id="@+id/textView_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 6장의 사진"

                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView_subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="체크버튼을 눌러서 대표사진을 선택할 수 있습니다."
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/button_product_add_add_picture"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_title1" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_product_add_add_picture"
                    android:layout_width="64dp"
                    android:layout_height="24dp"
                    android:background="@drawable/wide_box_rounded_button_stroke"
                    android:paddingLeft="8dp"
                    android:paddingTop="4dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="4dp"
                    android:text="사진추가"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/jagi_ivory"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/textView_subtitle1"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_product_add_add_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:visibility="visible" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상품정보"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/editinputlayout_product_add_productnameedit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/wide_box_rounded_stroke">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editinput_product_add_productname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="상품명을 입력해주세요"
                        android:textColorHint="@color/jagi_inactiveText" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/editinputlayout_product_add_productpriceedit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/wide_box_rounded_stroke">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editinputlayout_product_add_productprice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="가격을 입력해주세요"
                        android:inputType="number|numberDecimal"
                        android:textColorHint="@color/jagi_inactiveText" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/menu_product_add_select_category"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="카테고리 선택">

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        app:simpleItems="@array/category" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/menu_product_add_select_ordermade"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="주문제작 가능 여부 선택">

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        app:simpleItems="@array/select_ordermade" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/wide_box_rounded_stroke"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/textView_product_add_option"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="주문제작 옵션 선택"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp">

                        <CheckBox
                            android:id="@+id/checkBox_product_add_option1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="레터링" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/editinputlayout_product_add_option1_priceedit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/wide_box_rounded_stroke"
                            android:gravity="right|center_vertical">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editinputlayout_product_add_option1_price"
                                android:layout_width="128dp"
                                android:layout_height="32dp"
                                android:gravity="right|center_vertical"
                                android:hint="추가 금액"
                                android:inputType="number|numberDecimal"
                                android:textColorHint="@color/jagi_inactiveText" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp">

                        <CheckBox
                            android:id="@+id/checkBox_product_add_option2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="그림" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/editinputlayout_product_add_option2_priceedit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/wide_box_rounded_stroke"
                            android:gravity="right|center_vertical">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editinputlayout_product_add_option2_price"
                                android:layout_width="128dp"
                                android:layout_height="32dp"
                                android:gravity="right|center_vertical"
                                android:hint="추가 금액"
                                android:inputType="number|numberDecimal"
                                android:textColorHint="@color/jagi_inactiveText" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/editinputlayout_product_add_detailedit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/wide_box_rounded_stroke">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editinputlayout_product_add_detail"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:gravity="start"
                        android:hint="상품 상세정보를 입력해주세요"
                        android:textColorHint="@color/jagi_inactiveText" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:id="@+id/textView_title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="도면추가"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView_subtitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="( 3 / 4 )"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    app:layout_constraintBaseline_toBaselineOf="@+id/textView_title3"
                    app:layout_constraintLeft_toRightOf="@+id/textView_title3" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_product_add_add_blueprint"
                    android:layout_width="64dp"
                    android:layout_height="24dp"
                    android:background="@drawable/wide_box_rounded_button_stroke"
                    android:paddingLeft="8dp"
                    android:paddingTop="4dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="4dp"
                    android:text="도면추가"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/jagi_ivory"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_product_add_add_plan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_product_add_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/wide_box_bottom_inactive"
                android:padding="8dp"
                android:text="확인"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="@color/jagi_ivory"
                app:layout_constraintBottom_toBottomOf="parent" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>