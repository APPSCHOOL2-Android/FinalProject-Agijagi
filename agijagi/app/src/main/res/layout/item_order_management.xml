<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/jagi_white"
        app:cardCornerRadius="8dp"
        app:strokeColor="@color/jagi_black_42"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageview_order_management_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/shopping_list_no_item_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textview_order_management_item_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="28dp"
                android:text="주문자명"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/imageview_order_management_item"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textview_order_management_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:text="제품명 도자기"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/imageview_order_management_item"
                app:layout_constraintTop_toBottomOf="@id/textview_order_management_item_brand" />

            <TextView
                android:id="@+id/textview_order_management_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:text="100,000원"
                android:textSize="11sp"
                app:layout_constraintStart_toEndOf="@+id/imageview_order_management_item"
                app:layout_constraintTop_toBottomOf="@id/textview_order_management_item_name" />

            <TextView
                android:id="@+id/textview_order_management_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="23.07.08"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>