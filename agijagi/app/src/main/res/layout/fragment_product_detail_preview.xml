<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jagi_ivory"
    android:orientation="vertical"
    tools:context=".sellermypage.ProductDetailPreviewFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_product_detail_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.AgijagiToolbar"
        app:navigationIcon="@drawable/arrow_back_24px" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageview_product_detail_preview_image1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/product_detail_default_image" />

            <TextView
                android:id="@+id/textview_product_detail_preview_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="브랜드명"
                android:textColor="@color/brand_name"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textview_product_detail_preview_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="제품명 도자기"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_product_detail_preview_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="150,000원"
                android:textSize="14dp" />

            <View
                android:id="@+id/view_product_detail_preview_divider_stick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/divider_stick" />

            <TextView
                android:id="@+id/textview_product_detail_preview_info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:text="제품명 도자기 ..."
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_product_detail_preview_info_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="40dp"
                android:text="기본적인 블랙 색상의 깔끔한 디자인과 다양한 디자인으로 쓰임이 많은 도자기 그릇입니다. 도자기 재질로 무게감이 있어 안정적으로.."
                android:textAlignment="center"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageview_product_preview_detail_image2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:adjustViewBounds="true"
                android:src="@drawable/product_detail_default_image" />

            <ImageView
                android:id="@+id/imageview_product_preview_detail_image3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:adjustViewBounds="true"
                android:src="@drawable/product_detail_default_image" />

            <ImageView
                android:id="@+id/imageview_product_preview_detail_image4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:adjustViewBounds="true"
                android:src="@drawable/product_detail_default_image" />

            <ImageView
                android:id="@+id/imageview_product_preview_detail_image5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:adjustViewBounds="true"
                android:src="@drawable/product_detail_default_image" />

            <ImageView
                android:id="@+id/imageview_product_preview_detail_image6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:adjustViewBounds="true"
                android:src="@drawable/product_detail_default_image" />

        </LinearLayout>

    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_product_detail_preview_product_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wide_box_bottom_active"
        android:textColor="@color/jagi_hint_color"
        android:textSize="16dp" />

</LinearLayout>