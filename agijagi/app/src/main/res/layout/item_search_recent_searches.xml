<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:background="@drawable/recent_search_box_background"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context=".search.SearchFragment">

    <TextView
        android:id="@+id/textview_recent_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp" />

    <ImageButton
        android:id="@+id/image_button_delete"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginHorizontal="4dp"
        android:backgroundTint="@color/transparency"
        android:contentDescription="최근 검색어 삭제 아이콘"
        android:src="@drawable/close_18px" />

</LinearLayout>