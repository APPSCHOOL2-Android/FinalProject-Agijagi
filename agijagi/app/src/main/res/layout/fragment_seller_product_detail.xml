<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jagi_ivory"
    android:orientation="vertical"
    tools:context=".sellermypage.SellerProductDetailFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_seller_product_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.AgijagiToolbar"
        app:menu="@menu/menu_seller_product_detail"
        app:navigationIcon="@drawable/arrow_back_24px" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <io.supercharge.shimmerlayout.ShimmerLayout
                android:id="@+id/shimmerLayout_seller_product_detail_thumbnail_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageview_seller_product_detail_thumbnail_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/product_detail_default_image" />

            </io.supercharge.shimmerlayout.ShimmerLayout>

            <TextView
                android:id="@+id/textview_seller_product_detail_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:textColor="@color/brand_name"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textview_seller_product_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_seller_product_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:textSize="14dp" />

            <View
                android:id="@+id/view_seller_product_detail_divider_stick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/divider_stick" />

            <TextView
                android:id="@+id/textview_seller_product_detail_info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_seller_product_detail_info_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="40dp"
                android:textAlignment="center"
                android:textSize="12sp" />

            <io.supercharge.shimmerlayout.ShimmerLayout
                android:id="@+id/shimmerLayout_seller_product_detail_image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageview_seller_product_detail_image1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/product_detail_default_image" />

            </io.supercharge.shimmerlayout.ShimmerLayout>

            <io.supercharge.shimmerlayout.ShimmerLayout
                android:id="@+id/shimmerLayout_seller_product_detail_image2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageview_seller_product_detail_image2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/product_detail_default_image" />

            </io.supercharge.shimmerlayout.ShimmerLayout>

            <io.supercharge.shimmerlayout.ShimmerLayout
                android:id="@+id/shimmerLayout_seller_product_detail_image3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageview_seller_product_detail_image3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/product_detail_default_image" />

            </io.supercharge.shimmerlayout.ShimmerLayout>

            <io.supercharge.shimmerlayout.ShimmerLayout
                android:id="@+id/shimmerLayout_seller_product_detail_image4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageview_seller_product_detail_image4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/product_detail_default_image" />

            </io.supercharge.shimmerlayout.ShimmerLayout>

            <io.supercharge.shimmerlayout.ShimmerLayout
                android:id="@+id/shimmerLayout_seller_product_detail_image5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageview_seller_product_detail_image5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/product_detail_default_image" />

            </io.supercharge.shimmerlayout.ShimmerLayout>

            <io.supercharge.shimmerlayout.ShimmerLayout
                android:id="@+id/shimmerLayout_seller_product_detail_image6"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageview_seller_product_detail_image6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/product_detail_default_image" />

            </io.supercharge.shimmerlayout.ShimmerLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>