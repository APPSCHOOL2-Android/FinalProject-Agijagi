<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.HomeFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/menu_home">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/agijagi_logo" />

    </com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/home_thumbnail">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/linearlayout_home_to_order_made_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/ordermade_box_rounded"
                        android:clickable="true"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="주문 제작 상품 보기"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/arrow_forward_ios_24px" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textview_home_best_items"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="16dp"
                        android:text="BEST ITEMS"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textview_home_best_items"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:columnCount="2"
                        android:rowCount="2">

                        <RelativeLayout
                            android:id="@+id/relativelayout_home_layout_one"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_marginBottom="16dp"
                            android:layout_marginRight="4dp">

                            <LinearLayout
                                android:id="@+id/linearlayout_home_button_one"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/bestitem_box_rounded"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/linearlayout_home_image_one"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/agijagi_logo" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/textview_home_brand_name_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/linearlayout_home_button_one"
                                android:layout_alignStart="@+id/linearlayout_home_button_one"
                                android:layout_marginTop="8dp"
                                android:text="브랜드명"
                                android:textColor="@color/brand_name"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/textview_home_product_name_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textview_home_brand_name_one"
                                android:layout_alignStart="@+id/linearlayout_home_button_one"
                                android:layout_marginTop="4dp"
                                android:text="제품명 도자기"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textview_homefragment_price_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textview_home_product_name_one"
                                android:layout_alignStart="@+id/linearlayout_home_button_one"
                                android:text="100,000원"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativelayout_home_layout_two"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_marginBottom="16dp"
                            android:layout_marginStart="4dp">

                            <LinearLayout
                                android:id="@+id/linearlayout_home_button_two"
                                android:layout_width="match_parent"
                                android:layout_height="112dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/bestitem_box_rounded"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/linearlayout_home_image_two"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/agijagi_logo" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/textview_home_brand_name_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/linearlayout_home_button_two"
                                android:layout_alignStart="@+id/linearlayout_home_button_two"
                                android:layout_marginTop="8dp"
                                android:text="브랜드명"
                                android:textColor="@color/brand_name"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/textview_home_product_name_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textview_home_brand_name_two"
                                android:layout_alignStart="@+id/linearlayout_home_button_two"
                                android:layout_marginTop="4dp"
                                android:text="제품명 도자기"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textview_home_price_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textview_home_product_name_two"
                                android:layout_alignStart="@+id/linearlayout_home_button_two"
                                android:text="100,000원"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativelayout_home_layout_three"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_marginBottom="16dp"
                            android:layout_marginRight="4dp">

                            <LinearLayout
                                android:id="@+id/linearlayout_home_button_three"
                                android:layout_width="match_parent"
                                android:layout_height="112dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/bestitem_box_rounded"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/linearlayout_home_image_three"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/agijagi_logo" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/textview_home_brand_name_three"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/linearlayout_home_button_three"
                                android:layout_alignStart="@+id/linearlayout_home_button_three"
                                android:layout_marginTop="8dp"
                                android:text="브랜드명"
                                android:textColor="@color/brand_name"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/textview_home_product_name_three"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textview_home_brand_name_three"
                                android:layout_alignStart="@+id/linearlayout_home_button_three"
                                android:layout_marginTop="4dp"
                                android:text="제품명 도자기"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textview_home_price_three"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textview_home_product_name_three"
                                android:layout_alignStart="@+id/linearlayout_home_button_three"
                                android:text="100,000원"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativelayout_home_layout_four"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_marginBottom="16dp"
                            android:layout_marginStart="4dp">

                            <LinearLayout
                                android:id="@+id/linearlayout_home_button_four"
                                android:layout_width="match_parent"
                                android:layout_height="112dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/bestitem_box_rounded"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/linearlayout_home_image_four"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/agijagi_logo" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/textview_home_brand_name_four"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/linearlayout_home_button_four"
                                android:layout_alignStart="@+id/linearlayout_home_button_four"
                                android:layout_marginTop="8dp"
                                android:text="브랜드명"
                                android:textColor="@color/brand_name"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/textview_home_product_name_four"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textview_home_brand_name_four"
                                android:layout_alignStart="@+id/linearlayout_home_button_four"
                                android:layout_marginTop="4dp"
                                android:text="제품명 도자기"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textview_home_price_four"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textview_home_product_name_four"
                                android:layout_alignStart="@+id/linearlayout_home_button_four"
                                android:text="100,000원"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                        </RelativeLayout>

                    </GridLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>